<div class="card-title">
  <h1 class="page-title">{{model.title}}</h1>
</div>
{{log model}}
<div class="collection">
  {{#each model.items as |value|}}
    <div class="collection__item">
      <div class="todo-item">
        <button class="check-icon todo-item__toggle" {{action "toggleCheck" value}}>
          {{#if value.done}}
            <span class="todo-item__done todo-item__checkbox fa fa-check-square-o"></span>
          {{else}}
            <span class="todo-item__done todo-item__checkbox fa fa-square-o"></span>
          {{/if}}

        </button>
        <p class="todo-item__name"> {{value.name}}</p>
      </div>
      <button class="delete-btn btn" data-id="{{value.id}}" {{ action "destroy" value}}>{{fa-icon "trash"}}</button>
    </div>
  {{/each}}



{{#simple-form onsubmit=(action "saveItem" model) as |formValues|}}
  <div class="new-todo-form collection__item">
    {{input name="new-todo"  value=formValues.name class="new-todo-form__input todo-item-name " type="text" placeholder="New Todo"}}
    <button type="submit" class="btn add-btn submit">add</button>
  </div>
  {{/simple-form}}
</div>
