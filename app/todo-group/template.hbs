  <div class="top-container__inner">
    <div class="hamburger">E</div>
    <h2 class="top-title">Todos</h2>
    <nav class="top-nav">
      {{#each model as |group|}}
        {{#link-to "todo-group.detail" group class="top-nav__item"}}
          {{group.title}}
        {{/link-to}}
      {{/each}}

      {{#link-to 'todo-group.new' class="top-nav__item new-btn new" }}
